        "type": "paragraph",
        "content": "[Meta descriptions help](https:\/\/help.pluginuseful.com\/hc\/en-us\/articles\/209542049-Meta-descriptions)"
      },
      {
        "type": "text",
        "id": "pluginseo_metaDescriptionTruncateChars",
        "label": "Maximum length (characters)",
        "default": "170"
      },
      {
        "type": "header",
        "content": "Meta Description Templates"
      },
      {
        "type": "checkbox",
        "id": "pluginseo_metaDescriptionTemplateApplyToAll",
        "label": "Also apply templates to manually entered meta descriptions?",
        "default": true
      },
      {
        "type": "textarea",
        "id": "pluginseo_metaDescriptionDefaultTemplate",
        "label": "Default",
        "default": "%% page_description %%",
        "info": "this template will apply to all blank page types below"
      },
      {
        "type": "textarea",
        "id": "pluginseo_metaDescriptionIndexTemplate",
        "label": "Homepage"
      },
      {
        "type": "textarea",
        "id": "pluginseo_metaDescriptionPageTemplate",
        "label": "Page",
        "default": "%% page.content || strip_newlines || strip_html || escape || append_not_empty: '.' %% Visit %% shop.name %%"
      },
      {
        "type": "textarea",
        "id": "pluginseo_metaDescriptionSearchTemplate",
        "label": "Search",
        "default": "Find %% search.terms || default: 'it' %% here%% search.results || map: 'title' || take: '3' || join: ', ' || prepend_not_empty: ' including ' || append_not_empty: ' and more' %% at %% shop.name %%"
      },
      {
        "type": "textarea",
        "id": "pluginseo_metaDescriptionProductTemplate",
        "label": "Product",
        "default": "%% product.description || strip_newlines || replace: '.,', ',' || strip_html || escape %%"
      },
      {
        "type": "textarea",
        "id": "pluginseo_metaDescriptionCollectionTemplate",
        "label": "Collection",
        "default": "%% collection.all_tags || take: '3' || join: ', ' || prepend_not_empty: 'Shop ' || append_not_empty: ' and more ' %%%% collection.title || escape %% at %% shop.name %% %% collection.description || strip_html || strip_newlines || escape || strip %%"
      },
      {
        "type": "textarea",
        "id": "pluginseo_metaDescriptionCatalogTemplate",
        "label": "Catalog Page",
        "default": "Discover %% collection.products || map: 'title' || uniq || take: '3' || join: ', ' || escape %% and more."
      },
      {
        "type": "textarea",
        "id": "pluginseo_metaDescriptionBlogTemplate",
        "label": "Blog",
        "default": "%% blog.articles || map: 'title' || take: '3' || join: ', ' || prepend_not_empty: 'Read about ' || append_not_empty: ' and more on the '%%%% shop.name %% %% blog.title %% blog."
      },
      {
        "type": "textarea",
        "id": "pluginseo_metaDescriptionArticleTemplate",
        "label": "Article",
        "default": "%% article.excerpt_or_content || strip_newlines || strip_html || escape %%%% article.tags || take: '6' || join: ', ' || prepend_not_empty: ' Read about ' || append_not_empty: ' and more' %% %% article.title %% on the %% shop.name %% %% blog.title %% blog"
      },
      {
        "type": "textarea",
        "id": "pluginseo_metaDescription404Template",
        "label": "404",
        "default": "The page you requested can't be found, please visit %% shop.domain %% instead"
      }
    ]
  },
