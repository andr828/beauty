[
  {
    "name": "SEO - Page Titles",
    "settings": [
      {
        "type": "paragraph",
        "content": "Powered by Plug in SEO Plus"
      },
      {
        "type": "paragraph",
        "content": "Page titles are displayed in the web browser tab and as the blue underlined link text in search engines"
      },
      {
        "type": "paragraph",
        "content": "[Page titles help](https:\/\/help.pluginuseful.com\/hc\/en-us\/articles\/209539509-Page-titles)"
      },
      {
        "type": "text",
        "id": "pluginseo_pageTitleTruncateChars",
        "label": "Maximum length (characters)",
        "default": "999"
      },
      {
        "type": "header",
        "content": "Appender"
      },
      {
        "type": "checkbox",
        "id": "pluginseo_pageTitleEnableAppender",
        "label": "Append to short page titles?",
        "default": true
      },
      {
        "type": "text",
        "id": "pluginseo_pageTitleAppenderTemplate",
        "label": "Append",
        "default": "| %% shop.name %%"
      },
      {
        "type": "text",
        "id": "pluginseo_pageTitleAppenderTargetLength",
        "label": "Target length",
        "default": "70"
      },
      {
        "type": "header",
        "content": "Page Title Templates"
      },
      {
        "type": "checkbox",
        "id": "pluginseo_pageTitleTemplateApplyToAll",
        "label": "Also apply templates to manually entered page titles?",
        "default": true
      },
      {
        "type": "text",
        "id": "pluginseo_pageTitleDefaultTemplate",
        "label": "Default",
        "default": "%% page_title %%",
        "info": "this template will apply to all blank page types below"
      },
      {
        "type": "text",
        "id": "pluginseo_pageTitleIndexTemplate",
        "label": "Homepage"
      },
      {
        "type": "text",
        "id": "pluginseo_pageTitlePageTemplate",
        "label": "Page",
        "default": "%% page_title %%"
      },
      {
        "type": "text",
        "id": "pluginseo_pageTitleSearchTemplate",
        "label": "Search",
        "default": "Shop %% search.terms %% at %% shop.name %%"
      },
      {
        "type": "text",
        "id": "pluginseo_pageTitleProductTemplate",
        "label": "Product",
        "default": "%% product.title %%%% product.selected_variant.title || prepend_not_empty: ' ' %%"
      },
      {
        "type": "text",
        "id": "pluginseo_pageTitleCollectionTemplate",
        "label": "Collection",
        "default": "Shop %% current_tags || join: ', ' || append_not_empty: ' ' %%%% collection.title || escape %% at %% shop.name %%"
      },
      {
        "type": "text",
        "id": "pluginseo_pageTitleCatalogTemplate",
        "label": "Catalog Page",
        "default": "Browse %% collection.products || map: 'collections' || map: 'title' || uniq || take: '5' || join: ', ' || escape || remove: 'Home page, ' || remove: 'home page, '  || remove: 'Home page' || remove: 'Home page'  %% at %% shop.name %%"
      },
      {
        "type": "text",
        "id": "pluginseo_pageTitleBlogTemplate",
        "label": "Blog",
        "default": "%% shop.name %% %% blog.title %%%% blog.all_tags || take: '5' || join: ', ' || prepend_not_empty: ' blog: ' || append_not_empty: ' and more' %%"
      },
      {
        "type": "text",
        "id": "pluginseo_pageTitleArticleTemplate",
        "label": "Article",
        "default": "%% article.title %%%% article.tags || take: '3' || join: ', ' || prepend_not_empty: ' | ' || append_not_empty: ' and more' %% | %% shop.name %% %% blog.title %% blog"
      },
      {
        "type": "text",
        "id": "pluginseo_pageTitle404Template",
        "label": "404",
        "default": "404: Page Not Found - %% shop.name %%"
      }
    ]
  },
  {
    "name": "SEO - Meta Descriptions",
    "settings": [
      {
        "type": "paragraph",
        "content": "Powered by Plug in SEO Plus"
      },
      {
        "type": "paragraph",
        "content": "Meta descriptions are displayed as the paragraph text in search engines"
      },
